{
  "name": "estridi",
  "version": "0.3.0",
  "type": "module",
  "description": "Your Figma Plugin",
  "main": "code.js",
  "scripts": {
    "start": "rimraf output && concurrently -k \"pnpm watch\" \"pnpm serve\"",
    "watch": "esbuild --bundle --outfile=code.js src/client.ts --watch --target=es6",
    "serve": "tsc && node dist/esm/server.js",
    "build": "esbuild --bundle --outfile=code.js src/client.ts --target=es6 && tsc && tsc -p tsconfig.cjs.json && node cjsfix.js",
    "test": "vitest",
    "dev": "vite-node src/generators/cli.ts",
    "client": "vite-node src/figma/cli.ts",
    "install:local": "pnpm build && npm pack && npm i -g *.tgz && rimraf *.tgz"
  },
  "bin": "./dist/esm/figma/cli.js",
  "author": "",
  "license": "",
  "peerDependencies": {
    "@playwright/test": "^1.42.1"
  },
  "dependencies": {
    "glob": "^10.3.10",
    "@figma/plugin-typings": "*",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "esbuild": "^0.20.1",
    "express": "^4.18.2",
    "prettier": "^3.2.5",
    "typescript": "*",
    "vitest": "^1.3.1",
    "rimraf": "^5.0.5",
    "figma-api": "^1.11.0",
    "vite-node": "^1.4.0"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/runners/runner.js",
      "types": "./dist/esm/runners/runner.d.ts",
      "require": "./dist/cjs/runners/runner.js"
    }
  }
}
